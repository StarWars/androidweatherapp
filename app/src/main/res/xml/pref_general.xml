<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:key="@string/pref_location_key"
        android:singleLine="true"
        android:title="@string/pref_location_label" />

    <ListPreference
        android:defaultValue="@string/settings_units_metric"
        android:entries="@array/settings_units_human_types"
        android:entryValues="@array/settings_units_types_values"
        android:key="@string/settings_units_selection_key"
        android:title="@string/settings_units_selection_title" />

</PreferenceScreen>
